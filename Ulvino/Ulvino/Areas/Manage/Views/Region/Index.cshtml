@model List<Region>
@{
    ViewData["Title"] = "Index";
    int order = 0;

}




<div class="page-content fade-in-up">
    <div class="ibox ">
        <div class="ibox-head p-5">
            <h1>Regions</h1>
            <a asp-action="create" class="btn btn-primary btn-rounded">Create</a>
        </div>
        <div class="ibox-body">
            <table class="table bg-teal-400 text-white table-bordered " id="example-table" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Action</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        order++;
                        <tr>
                            <td>@order</td>
                            <td>@item.Name</td>
                            <td>
                                <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning btn-rounded">Edit</a>
                                <a asp-action="deletefetch" asp-route-id="@item.Id" class="btn btn-danger btn-item-delete btn-rounded ">Delete</a>
                            </td>

                        </tr>
                    }
                   

                </tbody>
            </table>
        </div>
    </div>

</div>

