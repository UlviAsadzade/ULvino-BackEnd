@model List<Product>
@{
    ViewData["Title"] = "Index";
    int order = 0;

}



<div class="page-content fade-in-up">
    <div class="ibox ">
        <div class="ibox-head p-5">
            <h1>Products</h1>
            <a asp-action="create" class="btn btn-primary font-20  btn-rounded">Create</a>
        </div>
        <div class="ibox-body">
            <table class="table bg-ebony-800 text-white table-bordered " id="example-table" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th class="text-center">#</th>
                        <th class="text-center" style="width:120px">Name</th>
                        <th class="text-center">Type</th>
                        <th class="text-center" style="width:100px">Variaty</th>
                        <th class="text-center">Sale Price</th>
                        <th class="text-center">Image</th>
                        <th class="text-center" style="width:100px">Action</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        order++;
                    <tr>
                        <td class="align-middle text-center">@order</td>
                        <td class="align-middle text-center">@item.Name</td>
                        <td class="align-middle text-center">@item.Type.Name</td>
                        <td class="align-middle text-center">@item.Variaty.Name</td>
                        <td class="align-middle text-center">$@item.SalePrice</td>
                        <td class="text-center align-middle"><img src="~/uploads/product/@item.ProductImages.FirstOrDefault(x=>x.IsPoster == true)?.Image" style="max-width:100px; border-radius:10px" /></td>

                        <td class="align-middle text-center">
                            <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning btn-rounded">Edit</a>
                            <a asp-action="deletefetch" asp-route-id="@item.Id" class="btn btn-danger btn-item-delete btn-rounded ">Delete</a>
                        </td>

                    </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>

</div>

