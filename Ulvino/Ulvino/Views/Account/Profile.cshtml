@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
    int index = 0;
    int orderItemIndex = 0;

}

@section profileStyles{
    <style>
        
        .hiddenRow {
            padding: 0 !important;
        }

        .fa-clipboard-list{
            cursor:pointer
        }
    </style>
}


<section class="page-title" style="background-image: url('/assets/images/page-title.jpg');">
    <div class="container">
        <div class="row">
            <h1>MY ACCOUNT</h1>
            <div class="page-tab">
                <a asp-controller="home" asp-action="index">HOME</a>
                <i class="fas fa-angle-right"></i>
                <span>MY ACCOUNT</span>
            </div>
        </div>
    </div>
</section>

<section class="account-main">
    <div class="container">
        <h2>MY ACCOUNT</h2>
        <div class="row">
            <div class="d-flex align-items-start">
                <div class="col-3 account-left">
                    <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist"
                         aria-orientation="vertical">
                        <button class="nav-link active" id="v-pills-home-tab" data-bs-toggle="pill"
                                data-bs-target="#v-pills-home" type="button" role="tab" aria-controls="v-pills-home"
                                aria-selected="true">
                            Account Details
                        </button>
                        <button class="nav-link" id="v-pills-profile-tab" data-bs-toggle="pill"
                                data-bs-target="#v-pills-profile" type="button" role="tab" aria-controls="v-pills-profile"
                                aria-selected="false">
                            My Orders
                        </button>
                        <button class="nav-link" id="v-pills-messages-tab" data-bs-toggle="pill"
                                data-bs-target="#v-pills-messages" type="button" role="tab" aria-controls="v-pills-messages"
                                aria-selected="false">

                            <a asp-controller="account" asp-action="logout">Logout</a>

                        </button>
                    </div>
                </div>
                <div class="col-9 account-right">
                    <div class="tab-content" id="v-pills-tabContent">
                        <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel"
                             aria-labelledby="v-pills-home-tab">

                            <div class="user-detail-box">
                                <form method="post">
                                    <div class="row">
                                        <div class="col-6 user-form-item">
                                            <label asp-for="FullName">
                                                Full Name
                                            </label>
                                            <input type="text" asp-for="FullName" placeholder="Full Name">
                                            <span class="text-danger" asp-validation-for="FullName"></span>

                                        </div>
                                        <div class="col-6 user-form-item">
                                            <label asp-for="UserName">
                                                User Name
                                            </label>
                                            <input type="text" asp-for="UserName" placeholder="User Name" disabled>
                                            <span class="text-danger" asp-validation-for="UserName"></span>

                                        </div>
                                        <div class="col-6 user-form-item">
                                            <label asp-for="Email">
                                                Email
                                            </label>
                                            <input type="email" asp-for="Email" placeholder="Email">
                                            <span class="text-danger" asp-validation-for="Email"></span>

                                        </div>
                                        <div class="col-6 user-form-item">
                                            <label asp-for="PhoneNumber">
                                                Phone Number
                                            </label>
                                            <input type="number" asp-for="PhoneNumber" placeholder="Phone number">
                                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>

                                        </div>

                                    </div>
                                    <div class="row">
                                        <h3>PASSWORD CHANGE</h3>

                                        <div class="col-12 user-form-item">
                                            <label asp-for="CurrentPassword">
                                                Current Password
                                            </label>
                                            <input type="password" asp-for="CurrentPassword" placeholder="Enter your current password">
                                            <span class="text-danger" asp-validation-for="CurrentPassword"></span>

                                        </div>
                                        <div class="col-12 user-form-item">
                                            <label asp-for="NewPassword">
                                                New Password
                                            </label>
                                            <input type="password" asp-for="NewPassword" placeholder="Enter your new password">
                                            <span class="text-danger" asp-validation-for="NewPassword"></span>

                                        </div>
                                        <div class="col-12 user-form-item">
                                            <label asp-for="ConfirmNewPassword">
                                                Repeat Password
                                            </label>
                                            <input type="password" asp-for="ConfirmNewPassword" placeholder="Repeat your new password">
                                            <span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>

                                        </div>

                                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                                    </div>
                                    <button type="submit">SAVE CHANGES</button>
                                </form>
                            </div>

                        </div>

                        <div class="tab-pane fade" id="v-pills-profile" role="tabpanel"
                             aria-labelledby="v-pills-profile-tab">

                            <table class="table">
                                    <thead class="text-center">
                                        <tr>
                                            @*<th scope="col">#</th>
                                            <th scope="col" colspan="2" class="product-detail-head">Product</th>
                                            <th scope="col">Date</th>
                                            <th scope="col">Status</th>
                                            <th scope="col">Price</th>*@

                                            <th>#</th>
                                            <th>Details</th>
                                            <th>Total count</th>
                                            <th>Total Amount</th>
                                            <th>Date</th>
                                            <th>Status</th>

                                        </tr>
                                    </thead>
                                    <tbody class="text-center align-middle">
                                        @foreach (var order in Model.Orders)
                                        {
                                            index++;
                                            orderItemIndex = 0;

                                            <tr class="accordion-header collapsed" id="heading-@index" data-bs-toggle="collapse" data-bs-target="#collapse-@index" aria-expanded="true" aria-controls="collapse-@index">
                                                <td>@index</td>
                                                <td ><i class="fas fa-clipboard-list mt-4"></i></td>
                                                <td>@order.OrderItems.Count()</td>
                                                <td class="table-price">$@order.TotalAmount.00</td>
                                                <td>@order.CreatedAt.ToString("dd MMM yyyy HH:mm")</td>
                                                <td>
                                                    @if (order.Status == Ulvino.Models.Enums.OrderStatus.Accepted)
                                                    {
                                                        <h5><span class="badge bg-success">Accepted</span></h5>
                                                    }
                                                    else if (order.Status == Ulvino.Models.Enums.OrderStatus.Rejected)
                                                    {
                                                        <h5><span class="badge bg-danger">Rejected</span></h5>
                                                    }
                                                    else
                                                    {
                                                        <h5><span class="badge bg-info">Pending</span></h5>
                                                    }
                                                </td>
                                            </tr>
                                            <tr >
                                                <td colspan="12" class="hiddenRow">
                                                    <div id="collapse-@index" class="accordion-body accordion-collapse collapse" aria-labelledby="heading-@index">
                                                        <table class="table table-bordered">
                                                            <thead>
                                                                <tr class="info">
                                                                    <th>#</th>
                                                                    <th>Product Image</th>
                                                                    <th>Product Name</th>
                                                                    <th>Count</th>
                                                                    <th>Price</th>
                                                                </tr>
                                                            </thead>

                                                            <tbody style="border-top-width:1px;">
                                                                @foreach (var orderItem in order.OrderItems)
                                                                {
                                                                    orderItemIndex++;
                                                                    <tr>
                                                                        <td>@orderItemIndex</td>
                                                                        <td>
                                                                            <img src="~/uploads/product/@orderItem.ProductImage" alt="">
                                                                        </td>
                                                                        <td>@orderItem.ProductName</td>
                                                                        <td>@orderItem.Count</td>
                                                                        <td class="table-price">$@orderItem.SalePrice.00</td>
                                                                    </tr>
                                                                }

                                                            </tbody>
                                                        </table>

                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                        @*<tr>
                                            <th scope="row">1</th>
                                            <td>
                                                <img src="./assets/images/wine-1.jpg" alt="">
                                            </td>
                                            <td>Convallis Quam Sit Vitae Sodales x 1</td>
                                            <td>26.11.2021</td>
                                            <td><span class="badge bg-info">Pending</span></td>
                                            <td class="table-price">$40.00</td>
                                        </tr>

                                        <tr>
                                            <th scope="row">2</th>
                                            <td>
                                                <img src="./assets/images/wine-2.jpg" alt="">
                                            </td>
                                            <td>Condimentum Posuere Consectetur Urna x 2</td>
                                            <td>27.11.2021</td>
                                            <td><span class="badge bg-success">Accepted</span></td>
                                            <td class="table-price">$60.00</td>
                                        </tr>*@
                                    </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>



