@model MemberLoginViewModel



<form asp-controller="account" asp-action="Login" asp-area="">
    <div class="form-imput-item">
        <input asp-for="UserName" type="text" placeholder="Username">
        <i class="fas fa-user"></i>
        <span asp-validation-for="UserName" class="text-danger"></span>

    </div>
    <div class="form-imput-item">
        <input asp-for="Password" type="password" placeholder="Password">
        <i class="fas fa-lock"></i>
        <span asp-validation-for="Password" class="text-danger"></span>

    </div>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <div class="form-remember-me">
        <label for="">
            <input type="checkbox" name="" id="">
            Remember Me
        </label>
    </div>
    <button type="submit">LOGIN</button>
    <a data-bs-toggle="modal" data-bs-target="#forgotModal" class="show-forgot-modal forgot-password">Forgot your password?</a>
</form>
