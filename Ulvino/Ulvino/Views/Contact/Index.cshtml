@model Setting
@{
    ViewData["Title"] = "Index";
}



    <section class="page-title" style="background-image: url('./assets/images/page-title.jpg');">
        <div class="container">
            <div class="row">
                <h1>CONTACT</h1>
                <div class="page-tab">
                    <a asp-controller="home" asp-action="index">HOME</a>
                    <i class="fas fa-angle-right"></i>
                    <span>CONTACT</span>
                </div>
            </div>
        </div>
    </section>

    <section class="contact-map">
        <div class="container">
            <div class="row">
                <div>
                    <img class="deal-left-icon" src="./assets/images/glass.png" alt="">
                </div>
                <h2>CONTACT US</h2>
                <div>
                    <iframe src="@Model.MapUrl" width="100%" height="450px" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
        </div>
    </section>

    <section class="contact-main">
        <div class="container">
            <div class="row">
                <div class="col-4">
                    <h3>CONTACT US</h3>
                    <div class="contact-us">
                        <div class="contact-icon-box">
                            <i class="@Model.HomeIcon"></i>
                            <span>Address</span>
                        </div>
                        <p>@Model.Address</p>
                        <div class="contact-icon-box">
                            <i class="@Model.PhoneIcon"></i>
                            <span>Phone</span>
                        </div>
                        <p>Mobile: @Model.Phone</p>
                        <p>Hotline: @Model.Hotline</p>
                        <div class="contact-icon-box">
                            <i class="@Model.EmailIcon"></i>
                            <span>Email</span>
                        </div>
                        <p>@Model.ContactEmail</p>
                        <p>@Model.SupportEmail</p>
                    </div>

                </div>
                <div class="col-8 contact-form">
                    <h3>TELL US YOUR MESSAGE</h3>
                    <form action="">
                        <div class="contact-form-item">
                            <label for="">
                                Full Name
                                <span>*</span>
                            </label>
                            <input type="text" name="" id="" placeholder="Full Name">
                        </div>
                        <div class="contact-form-item">
                            <label for="">
                                Email
                                <span>*</span>
                            </label>
                            <input type="text" name="" id="" placeholder="Email">
                        </div>
                        <div class="contact-form-item">
                            <label for="">
                                Subject
                            </label>
                            <input type="text" name="" id="" placeholder="Subject">
                        </div>
                        <div class="contact-form-item">
                            <label for="">
                                Message
                            </label>
                            <textarea name="" id="" cols="30" rows="10" placeholder="Add your message"></textarea>
                        </div>
                        <button type="submit">SEND</button>
                    </form>
                </div>

            </div>
        </div>
    </section>


